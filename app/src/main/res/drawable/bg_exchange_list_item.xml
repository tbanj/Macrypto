<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item android:left="-2dp" android:right="-2dp" android:top="-2dp">
                <shape>
                    <stroke android:width="1dp" android:color="@color/item_bg_border_color" />
                </shape>
            </item>

            <item>
                <shape>
                    <solid android:color="#2001A03D" />
                </shape>
            </item>

            <item android:bottom="-6dp" android:right="-6dp" android:top="-6dp">
                <shape>
                    <stroke android:width="5dp" android:color="#01A03D" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>